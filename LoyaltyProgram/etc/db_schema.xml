<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="coins" resource="default" engine="innodb">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Entity Id"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" identity="false" comment="Customer Id"/>
        <column xsi:type="int" name="order_id" unsigned="true" nullable="false" identity="false" comment="Order Id"/>
        <column xsi:type="int" name="coins_amount" unsigned="false" nullable="false" default="0" comment="Coins Amount"/>
        <column xsi:type="timestamp" name="insertion_date" on_update="false" nullable="false" comment="Insertion Date"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
